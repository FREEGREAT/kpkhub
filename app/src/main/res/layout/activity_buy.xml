<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Купити"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"
        android:textSize="40sp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/horisontalline"
        android:layout_marginTop="50dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Телеграм"
            android:textSize="27dp"
            android:layout_marginBottom="40dp"
            />
        <TextView
            android:id="@+id/urlKitsanyuk"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text='@paschakrasava'
            android:gravity="center"
            android:background="#333"
            />
        <TextView
            android:id="@+id/urlKuryshchuk"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text='@Kuryshchuk'
            android:gravity="center"
            android:background="#333"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/urlDmitrenko"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text='@F_blxxd_T'
            android:gravity="center"
            android:background="#333"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/urlKidanetska"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text='@takeitorlrvrrit'
            android:gravity="center"
            android:background="#333"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/horisontalline"
        android:layout_marginTop="100dp"
        />
</LinearLayout>